    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="記録開始時刻"
        />
    <LinearLayout
        android:id="@+id/startTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <NumberPicker
            android:id="@+id/startHourPicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text=":" />
        <NumberPicker
            android:id="@+id/startMinutePicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昼休み"
        />
    <LinearLayout
        android:id="@+id/lunchTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <NumberPicker
            android:id="@+id/startLunchHourPicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text=":" />
        <NumberPicker
            android:id="@+id/startLunchMinutePicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="～" />
        <NumberPicker
            android:id="@+id/endLunchHourPicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text=":" />
        <NumberPicker
            android:id="@+id/endLunchMinutePicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="記録終了時刻"
        />
    <LinearLayout
        android:id="@+id/endTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <NumberPicker
            android:id="@+id/endHourPicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text=":" />
        <NumberPicker
            android:id="@+id/endMinutePicker"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textColor="@color/Red"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="" />
</LinearLayout>